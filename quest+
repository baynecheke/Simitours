<body>
<canvas id="gameCanvas" width="800" height="600" style="background:#444"></canvas>

<div id="ui">
  <div class="menu-buttons">
    <button id="settingsBtn">⚙️</button>
    <button id="shopBtn">🛒</button>
    <button id="questBtn">📜</button>
  </div>
  <div id="settingsPanel" class="panel"></div>
  <div id="shopPanel" class="panel"></div>
  <div id="questPanel" class="panel"></div>
</div>

<script>
function closePanels(){document.querySelectorAll('.panel').forEach(p=>p.style.display='none');}

function openPanel(id){
  closePanels();
  const panel=document.getElementById(id);
  panel.innerHTML=`<h2>${id}</h2><button onclick="closePanels()">Close</button>`;
  panel.style.display='block';
}

document.getElementById("settingsBtn").onclick=()=>openPanel("settingsPanel");
document.getElementById("shopBtn").onclick=()=>openPanel("shopPanel");
document.getElementById("questBtn").onclick=()=>openPanel("questPanel");
</script>
</body>
